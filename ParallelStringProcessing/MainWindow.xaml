<Window x:Class="ParallelStringProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParallelStringProcessing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Load File" HorizontalAlignment="Left" Margin="76,65,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click" Height="40" />
        <Button x:Name="button1" Content="Process data folder" HorizontalAlignment="Left" Margin="76,169,0,0" VerticalAlignment="Top" Width="134" Click="button1_Click" Height="40" />
        <ScrollViewer x:Name="ScrollViewer" HorizontalAlignment="Left" Height="322" Margin="266,25,0,0" VerticalAlignment="Top" Width="428" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StackPanelCompletedTasks" HorizontalAlignment="Left" VerticalAlignment="Bottom" ClipToBounds="True" CanVerticallyScroll="True" />
        </ScrollViewer>
    </Grid>
</Window>